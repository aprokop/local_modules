#%Module
proc ModulesHelp { } { }

set _module_name  [module-info name]
set is_module_rm  [module-info mode remove]
set sys           [uname sysname]
set os            [uname release]

set VERSION         2.7.9
set PYTHON_PATH     $env(HOME)/local/opt/python-$VERSION

prepend-path    PATH                $PYTHON_PATH/bin
prepend-path    CPATH               $PYTHON_PATH/include
prepend-path    LD_LIBRARY_PATH     $PYTHON_PATH/lib
prepend-path    PKG_CONFIG_PATH     $PYTHON_PATH/lib/pkgconfig
