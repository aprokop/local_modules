#%Module

conflict openmpi mpich

proc ModulesHelp { } {
}

set _module_name  [module-info name]
set is_module_rm  [module-info mode remove]
set sys           [uname sysname]
set os            [uname release]

set OPENMPI_VERSION 1.8.4
set OPENMPI_PATH $env(HOME)/local/opt/openmpi-$OPENMPI_VERSION

prepend-path    PATH            $OPENMPI_PATH/bin
prepend-path    CPATH           $OPENMPI_PATH/include
prepend-path    LD_LIBRARY_PATH $OPENMPI_PATH/lib
prepend-path    MANPATH         $OPENMPI_PATH/share/man
prepend-path    INFOPATH        $OPENMPI_PATH/share/info
prepend-path    PKG_CONFIG_PATH $OPENMPI_PATH/lib/pkgconfig
