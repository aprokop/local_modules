#%Module

conflict gcc intel llvm

module load gdb

proc ModulesHelp { } {
    global GCC_VERSION
    global GCC_CURPATH
    if { [ file exists $GCC_CURPATH/release_info ] } {
        set REL_INFO [ exec cat $GCC_CURPATH/release_info ]
    } else {
        set REL_INFO ""
    }
    puts stderr "$REL_INFO"
    puts stderr ""
    puts stderr "==================================================================="
    puts stderr "To re-display gcc/$GCC_VERSION release information,"
    puts stderr "type:    less $GCC_CURPATH/release_info"
    puts stderr "==================================================================="
    puts stderr ""
}

set _module_name  [module-info name]
set is_module_rm  [module-info mode remove]
set sys           [uname sysname]
set os            [uname release]

set GCC_VERSION 5.3.0
set GCC_CURPATH /home/aprokop/local/opt/gcc-$GCC_VERSION

setenv          GCC_PATH        $GCC_CURPATH
setenv          GCC_VERSION     $GCC_VERSION
setenv          GNU_VERSION     $GCC_VERSION

set-alias       gcc             "gcc -fdiagnostics-color=auto"

# PATH is complex because of our use of ccache and its symbolic linkage
if { [ module-info mode load ] } {
    remove-path     PATH            /home/aprokop/bin
    remove-path     PATH            /home/aprokop/local/bin
}
prepend-path    PATH            $GCC_CURPATH/bin
if { [ module-info mode load ] } {
    prepend-path    PATH            /home/aprokop/local/bin
    prepend-path    PATH            /home/aprokop/bin
}
prepend-path    MANPATH         $GCC_CURPATH/share/man
prepend-path    INFOPATH        $GCC_CURPATH/share/info
prepend-path    LD_LIBRARY_PATH $GCC_CURPATH/lib:$GCC_CURPATH/lib64

setenv          CC              gcc
setenv          CXX             g++
setenv          OMPI_MPICC      gcc
setenv          OMPI_MPICXX     g++
setenv          OMPI_CFLAGS     "-fdiagnostics-color"
setenv          OMPI_CXXFLAGS   "-fdiagnostics-color"
