#%Module
set _module_name  [module-info name]
set is_module_rm  [module-info mode remove]
set sys           [uname sysname]
set os            [uname release]

set METIS_VERSION 5.1.0
set METIS_PATH $env(HOME)/local/opt/metis-$METIS_VERSION

prepend-path    CPATH           $METIS_PATH/include
prepend-path    PATH            $METIS_PATH/bin
prepend-path    LD_LIBRARY_PATH $METIS_PATH/lib
