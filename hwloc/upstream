#%Module
proc ModulesHelp { } { }

set _module_name  [module-info name]
set is_module_rm  [module-info mode remove]
set sys           [uname sysname]
set os            [uname release]

set HWLOC_PATH       $env(HOME)/local/opt/hwloc

prepend-path    PATH            $HWLOC_PATH/bin
prepend-path    CPATH           $HWLOC_PATH/include
prepend-path    LD_LIBRARY_PATH $HWLOC_PATH/lib
prepend-path    MANPATH         $HWLOC_PATH/share/man
prepend-path    PKG_CONFIG_PATH $HWLOC_PATH/lib/pkgconfig
