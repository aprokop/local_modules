#%Module

conflict intel gcc llvm

proc ModulesHelp { } {
}

set is_module_rm  [module-info mode remove]

set INTEL_CURPATH     $env(HOME)/local/opt/intel/intel-composer_xe-2015.0.090/
set INTEL_LEVEL       15.0.090
set INTEL_MAJOR_LEVEL 15.0
set INTEL_MINOR_LEVEL 090

setenv          INTEL_PATH            $INTEL_CURPATH
setenv          INTEL_VERSION         $INTEL_LEVEL
setenv          INTEL_MAJOR_VERSION   $INTEL_MAJOR_LEVEL
setenv          INTEL_MINOR_VERSION   $INTEL_MINOR_LEVEL
setenv          MKLROOT               $INTEL_CURPATH/mkl

prepend-path    PATH            $INTEL_CURPATH/bin
prepend-path    LD_LIBRARY_PATH $INTEL_CURPATH/lib/intel64
prepend-path    MANPATH         $INTEL_CURPATH/man/en_US

setenv          CC              icc
setenv          CXX             icpc
setenv          OMPI_MPICC      icc
setenv          OMPI_MPICXX     icpc
